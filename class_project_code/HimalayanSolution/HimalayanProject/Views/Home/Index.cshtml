@model IEnumerable<HimalayanProject.Models.Expedition>

@{
    ViewData["Title"] = "Home Page";
}

<div id="statsSection">

</div>


<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="row">
    <div class="col">
        <h3>Expedition Search</h3>
        <form method="get" class="valid" asp-controller="Home" asp-action="Search">
            <input class="form-control col-md-8" type="text" minlength="2" title="Use at least 2 characters" name="search_term" required pattern=".*\S+.*" />
            <p>(Enter search by peak name)</p>
            <button type="submit" class="btn btn-outline-dark"> Search </button>
        </form>
    </div>
    <div class="col">
        <table class=".table-sm table-borderless">

            @if (Model != null)
            {
                <tr>
                    <th>Peak</th>
                    <th><span>  </span></th>
                    <th>Height</th>
                    <th><span>  </span></th>
                    <th>Season</th>
                    <th><span>  </span></th>
                    <th>Year</th>
                </tr>
                @foreach (Expedition e in Model)
                {
                    <tr>
                        <td>@e.Peak.Name</td>
                        <td><span>  </span></td>
                        <td>@e.Peak.Height</td>
                        <td><span>  </span></td>
                        <td>@e.Season</td>
                        <td><span>  </span></td>
                        <td>@e.Year</td>

                    </tr>
                }
            }


        </table>
    </div>
</div>


@section Scripts {
    <script type="text/javascript" src="~/js/site.js"></script>
}