@model IEnumerable<HimalayanProject.Models.Expedition>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="row">
    <div class="col">
        <h3>Expedition Search</h3>
        <form method="get" class="valid" asp-controller="Home" asp-action="Search">
            <input class="form-control col-md-8" type="text" minlength="2" title="Use at least 2 characters" name="search_term" required pattern=".*\S+.*" />
            <p>(Enter search by peak name)</p>
            <button type="submit" class="btn btn-outline-dark"> Search </button>
        </form>
    </div>
    <div class="col">
        <table class="table-striped table-borderless table-search">

            @if(Model != null)
            {
            <tr>
                <th>Peak</th>
                <th>Height</th>
                <th>Season</th>
                <th>Year</th>
                <th></th>
            </tr>
                @foreach(Expedition e in Model)
                {
                    <tr>
                        <td><a asp-controller="Peak" asp-action="Details" asp-route-id="@e.PeakId">@e.Peak.Name</a></td>
                        <td>@e.Peak.Height</td>
                        <td>@e.Season</td>
                        <td>@e.Year</td>
                        <td><a asp-controller="Expedition" asp-action="Details" asp-route-id="@e.Id">Details</a></td>
                    </tr>
                }
            }


        </table>
    </div>
</div>