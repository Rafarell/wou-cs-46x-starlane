@model HimalayanProject.Models.Expedition

@{
    ViewData["Title"] = "Expedition Details";
}

<h1>Expedition Details</h1>

<div>
    <h4>Expedition @Model.Id</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Season)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Season)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class = "col-sm-2">
            Start Date
         </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class = "col-sm-2">
            Termination Reason:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TerminationReason)
        </dd>
        <dt class = "col-sm-2">
            Oxygen Used?
        </dt>
        <dd class = "col-sm-10">
            @if (Model.OxygenUsed.Value)
            {
                <span>True</span>
            }
            else
            {
                <span>False</span>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Peak)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Peak.Name)
        </dd>
        <dt class = "col-sm-2">
            Trekking Agency
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TrekkingAgency.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
