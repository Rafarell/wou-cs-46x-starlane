@page
@model RegisterModel

<link rel="stylesheet" href="~/css/authentication.css">

<div class="text-center" style="padding:50px 0">
    <div class="logo">register</div>
    <div class="login-form-1">
        <form id="register-form" class="text-left" enctype="multipart/form-data" asp-route-returnUrl="@Model.ReturnUrl"
            method="POST">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="main-login-form">
                <div class="login-group">
                    <div class="form-group">
                        <label asp-for="Input.UserName" class="sr-only">Username</label>
                        <input type="text" class="form-control" asp-for="Input.UserName" placeholder="username">
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password" class="sr-only">Password</label>
                        <input type="password" class="form-control" asp-for="Input.Password" placeholder="password">
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword" class="sr-only">Password Confirm</label>
                        <input type="password" class="form-control" asp-for="Input.ConfirmPassword"
                            placeholder="confirm password">
                    </div>

                    <div class="form-group">
                        <label asp-for="Input.Email" class="sr-only">Email</label>
                        <input type="text" class="form-control" asp-for="Input.Email" placeholder="email">
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.FirstName" class="sr-only">First Name</label>
                        <input type="text" class="form-control" asp-for="Input.FirstName" placeholder="first name">
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.LastName" class="sr-only">Last Name</label>
                        <input type="text" class="form-control" asp-for="Input.LastName" placeholder="last name">
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.AboutMe" class="sr-only">About Me</label>
                        <input type="text" class="form-control" asp-for="Input.AboutMe" placeholder="about me">
                    </div>

                </div>
                <button type="submit" class="login-button"><i class="fa fa-chevron-right"></i></button>
            </div>

            <div class="pt-4">
                <p class="text-center">Profile pictures must be under 1 MB</p>
                <div class="input-group mb-3 px-2 py-2 rounded-pill bg-white shadow-sm">
                    <input id="upload" type="file" accept="image/*" class="form-control border-0" name="upload">
                    <div class="input-group-append">
                        <label for="upload" class="btn btn-light m-0 rounded-pill px-4"> <i
                                class="fa fa-cloud-upload mr-2 text-muted"></i><small
                                class="text-uppercase font-weight-bold text-muted">Choose file</small></label>
                    </div>
                </div>
                <span id="uploadPhotoError"></span>

                <p class="font-italic text-center">The uploaded photo will be shown below.</p>
                <div class="image-area mt-4"><img id="imageResult" src="#" alt=""
                        class="img-fluid rounded shadow-sm mx-auto d-block"></div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
<partial name="_ValidationScriptsPartial" />
}

