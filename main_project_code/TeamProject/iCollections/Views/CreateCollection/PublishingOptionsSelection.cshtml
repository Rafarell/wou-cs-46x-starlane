@model CreateCollectionPublishing
@{
    ViewData["Title"] = "Create iCollection";
}

<h1>Publishing Options Selection page</h1>

<form asp-controller="CreateCollection" asp-action="PublishingOptionsSelection" method="post" class="">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">

        <div class="col-6">
            @*<input type="hidden" asp-for="CollectionPhotosIds" value="@Model.CollectionPhotosIds" class="form-check-input" id="">
                <input type="hidden" asp-for="Route" value="@Model.Route" class="form-check-input" id="">*@

            <div class="form-group">
                <label asp-for="CollectionName" class="col-sm-4 col-form-label">Collection Name</label>
                <input asp-for="CollectionName" class="form-control">
                <span asp-validation-for="CollectionName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Visibility">Select the privacy levels (Everything is Public Currently)</label>
                <select asp-for="Visibility" class="form-control" asp-items="ViewBag.Visibility"></select>
                <span asp-validation-for="Visibility" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <a class="btn btn-primary" asp-controller="CreateCollection" asp-action="PhotoSelection">Back</a>
            <div class="form-group">
                <input type="submit" value="Publish" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}