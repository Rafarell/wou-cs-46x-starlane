@model BrowseList

@{
    ViewData["Title"] = "Collections";
}

<div class="row">
    <div class="col">
        <h1>Collections:</h1>
        @if (Model.SearchResults.Count() == 0)
        {
            <h2>It looks like this user doesn't have any Collections yet. Bummer!</h2>
        }
        @foreach (CollectionKeyword ck in Model.SearchResults)
        {
            <div class="collection-container">
                <a class="btn btn-primary" asp-controller="Home" asp-action="" asp-route-name="">@ck.Collect.Name</a>
                <p>@ck.DateAdded</p>
                <div class="keyword-container">
                    <p>@ck.Keyword.Name</p>
                </div>
            </div>
        }
    </div>
</div>
